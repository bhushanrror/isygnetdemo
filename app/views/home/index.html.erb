<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Skill Drill</title>
        <meta name="viewport" content="width=device-width">
        <script type='text/javascript' src='js/jquery.js'></script>
        <link href="stylesheets/style.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="stylesheets/responsiveslides.css">
        <script src="javascripts/responsiveslides.min.js"></script>


        <script>
           $(function() {
               var pull = $('.menu-btn');
               menu = $('nav .menu');
               menuHeight = menu.height();
               $(pull).on('click', function(e) {
               e.preventDefault();
               menu.slideToggle();
               });
               $(window).resize(function(){
               var w = $(window).width();
               if(w > 320 && menu.is(':hidden')) {
               menu.removeAttr('style');
               }
               });
               $("#slider1").responsiveSlides({
               speed: 800
               });
               

               });
        </script>
        <script type="text/javascript">
        $(document).ready(function() {
            /*
            *   Examples - images
            */

            

            $("a#example3").fancybox({
                'transitionIn'  : 'none',
                'transitionOut' : 'none'    
            });

            

            $("a[rel=example_group]").fancybox({
                'transitionIn'      : 'none',
                'transitionOut'     : 'none',
                'titlePosition'     : 'over',
                'titleFormat'       : function(title, currentArray, currentIndex, currentOpts) {
                    return '<span id="fancybox-title-over">Image ' + (currentIndex + 1) + ' / ' + currentArray.length + (title.length ? ' &nbsp; ' + title : '') + '</span>';
                }
            });

            /*
            *   Examples - various
            */

            
            $("#various3").fancybox({
                'width'             : '75%',
                'height'            : '75%',
                'autoScale'         : false,
                'transitionIn'      : 'none',
                'transitionOut'     : 'none',
                'type'              : 'iframe'
            });

        });
    </script>
		<script type="text/javascript">
			$(document).ready(function(){
			$('.input-control').change(function(){
				var course = $('.input-control').val();
				if(course){
					var url = "/course_detail?id="+course;    
					$(location).attr('href',url);
				}
				
			});	
			});
    </script>
        


</head>

