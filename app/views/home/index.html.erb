<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Skill Drill</title>
        <meta name="viewport" content="width=device-width">
        <script type='text/javascript' src='<%= asset_path('/javascripts/jquery.js') %>'></script>
        <link href="stylesheets/style.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="stylesheets/responsiveslides.css">
        <script src="javascripts/responsiveslides.min.js"></script>

        <script>
           $(function() {
               var pull = $('.menu-btn');
               menu = $('nav .menu');
               menuHeight = menu.height();
               $(pull).on('click', function(e) {
               e.preventDefault();
               menu.slideToggle();
               });
               $(window).resize(function(){
               var w = $(window).width();
               if(w > 320 && menu.is(':hidden')) {
               menu.removeAttr('style');
               }
               });
               $("#slider1").responsiveSlides({
               speed: 800
               });
               

               });
        </script>
       
    <script type="text/javascript">
   /* $(document).ready(function(){
        alert(0);
    });*/

    </script>
		<script type="text/javascript">
			
            $(document).ready(function(){
            $('.msg').val('');
    			$('.btn-normal').on("click", function(e){
    				
                    var course = $('.input-control').val();
    				if(course){
    					var url = "/course/"+course;    
    					$(location).attr('href',url);
    				}else{
                        $('.msg').append('Please select value!');
                        e.preventDefault;
                    }
    			}); 

                $('.input-control').on("change", function(e){
                    alert(0); return false;
                    
                }); 

			});
    </script>
</head>

<body>
<header>
	<div class="wrapper">
    	<div class="col">
        	<div class="col-4">
            	<h1 class="logo"><a href= "/home" ><img src="<%= asset_path('isygnet-logo-final.png') %>"></a></h1>
            </div>
            <div class="col-8">
            	<div class="fr clr social">
                	<span>Stay Connected:</span>
                	<ul class="social-icon fr">
                        <% @settings.each do |setting| %>
                            <% if (setting.settingkey == 'facebook' ) then %>          
                                <% if (setting.settingvalue) then %>
            						<li><a href="<%= setting.settingvalue %>" class="facebook">&nbsp;</a></li>
                                <% else %>
                                    <li><a href="#" class="facebook">&nbsp;</a></li>
                                <% end %>
                            <% end %>
                            <% if (setting.settingkey == 'google' ) then %>
                                <% if (setting.settingvalue) then %>
                                    <li><a href="<%= setting.settingvalue %>" class="g-plus">&nbsp;</a></li>
                                <% else %>
                                    <li><a href="#" class="g-plus">&nbsp;</a></li>
                                <% end %>
                            <% end %>
                            <% if (setting.settingkey == 'twitter' ) then %>
                                <% if (setting.settingvalue) then %>
                                    <li><a href="<%= setting.settingvalue %>" class="tweet">&nbsp;</a></li>
                                <% else %>
                                    <li><a href="#" class="tweet">&nbsp;</a></li>
                                <% end %>
                            <% end %>
                            <% if (setting.settingkey == 'linked_in' ) then %>
                                <% if (setting.settingvalue) then %>
                                    <li><a href="<%= setting.settingvalue %>" class="linkedin">&nbsp;</a></li>
                                <% else %>
                                    <li><a href="#" class="linkedin">&nbsp;</a></li>
                                <% end %>                        
                            <% end %>                       
                        <% end %>
					</ul>
                </div>
                <div class="fr phone-number clr">
                	<span class="phone-num-img">&nbsp;</span>
                	<span class="phone-text">Contact us: </span>
                    <span class="number">(<small>020</small>) 6419808</span>
                </div>
                <nav class="clr fr">
                    <a class="menu-btn" href="javascript:void(0);">Menu</a>
                    <ul class="fr menu-pills menu">
                        <li><a href="/home" class="active">Home</a></li>
                        <li><a href="/about">About Us</a></li>
                        <li><a>Our courses</a>
                            <ul class="sub-menu">

                           <% @courses.each do |c| %>
                              <li><%= link_to c.title, {:action => 'course_detail', :title => c.title } %></li>
                           <% end %> 
                          </ul>

                        </li>                        
                        <li><a href="/contact">Contact Us</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div><!-- wrapper end -->
</header>
<!-- header end -->
<div class="wrapper clr">
            <section class="slider shadow">
                <!-- <img src="/assets/img1.jpg"> -->
                <ul class="rslides" id="slider1">
                  <li><img src="<%= asset_path('img1.jpg') %>" alt=""></li>
                  <li><img src="<%= asset_path('1.jpg') %>" alt=""></li>
                  <li><img src="<%= asset_path('2.jpg') %>" alt=""></li>
                  <li><img src="/assets/3.jpg" alt=""></li>
                </ul>
            </section><!-- slider end -->
            <section class="stu-tetis shadow margin">
            <!-- Add student testimonial from testimonial object -->

            <% @testimonials[0..3].each_with_index do |testimonial, index| %>
                <% if (index == 0) then %>
                    <div class="col-5">
                        <div class="shadow box padding">
                            <a id="various3" href="http://www.youtube.com/embed/L9szn1QQfas?autoplay=1">
                                <%= image_tag testimonial.pic.url(:medium) %>
                            </a>
                        </div>  
                    </div>  
                    <div class="col-7">
                        <h2>Student Testimonials</h2>
                        <p>See what our graduates have to say about how Digital Marketing Institute programmes helped their careers.</p>                       
                        <div class="boxs clr col">
                <% else %>  
                        <div class="col-4">
                                <a href="#" class="thumbs shadow">
                                 <%= image_tag testimonial.pic.url(:medium) %>
                                </a>
                        </div>
                <% end %>
                <% if (index == 3) then %> 
                    </div>
                    </div>   
                <% elsif (@testimonials.size == (index-1)) %> 
                    </div>
                    </div>   
                <% end %>

            <% end %>
                    
            </section>
            <section class="maping shadow">
                    <div class="col-5">
                        <div class="box">
                        <img src="<%= asset_path('map.jpg') %>">
                        </div>
                    </div>
                    <div class="col-7">
                        <h2>Visit Us</h2>
                        <p>Our Global Partners are some of the world's finest training providers. <a href="/contact">Find out more</a> about where you can study our recognised programmes around the world</p>
                        <div class="clr"></div>
                        <button type="submit" class="btn-normal" onclick="window.location.href='/contact'" >Contact Us</button>
                    </div>
            </section><!-- maping end -->
            <section class="courses shadow">                   
                    <div class="col-7">
                        <div class="phone-img">
                            <img src="<%= asset_path('img4.jpg') %>">
                        </div>
                    </div>
                    <div class="col-5">
                        <h2>Our Courses</h2>
                        <p>Delivered through video, webinars and interactive workshops. Our programmes are presented by the best digital marketing experts from around the world.</p>
                        <div class="input-group">
                            <select class="input-control">
                                <option value=""> Select option</option>
                                <% @courses.each do |c| %>
                            	<option><%= c.title %></option>
                                    <div class="col-4">
                                    <div class="index-img">

                                    </div>                          
                                    </div>
                                <% end %>

                            </select>
                        </div>
                        <div class="clr"></div> 
                            <span class="msg"></span><br />
                            <button type="submit" class="btn-normal">GO TO THE COURSE</button>
                        </div>
            </section>
            <section class="partner-slider shadow">
                    <h2>Our Recruitment Partner</h2>
                    <div class="slider-img fixed-bar">         
                        <ul id="carousel" class="elastislide-list">
                        <% @recruiters[0..3].each do |recruiter| %>
                            <li>
                                <a href="#" >
                                    <%= image_tag recruiter.pic.url(:medium) %>
                                </a>
                            </li>
                        <% end %>        
                        </ul>
                    </div>
            </section> <!-- partner-slider end -->
            <section class="traning shadow">
                    <div class="col-7">
                        <h2>Corporate Traning</h2>
                           <h3>We offer flexible and tailored Corporate Training packages that match your business objectives.
                                <a href="/placement">Find out more here.</a>
                           </h3> 
                        <div class="para">
                            The lecturers were excellent. They were experts in their field but most importantly they were practical teachers. We were able to apply what we learned to our own business through examples they showed us.
                        </div>   
                        <p>Kartik Patil<span> Director </span></p>
                    </div>
                    <div class="col-4">
                        <div class="train-img">
                            <img src="<%= asset_path('img10.png') %>" alt="img" width="227px" height="231px">
                        </div> 
                    </div>
            </section><!-- traning end -->
            <footer>
                     <p>Copyright 2014 All Rights Reserved by <a href="/home">iSygnet</a><p>
            </footer><!-- footer end -->    
</div><!-- wrapper end -->   
</body>
</html>
