<div class="wrapper clr">            
            <section class="about shadow">
            <div class="col title">                
                <ul class="breadcrumb">
                   <li><a href="/home">Home</a> / <span class="current">Cources</span></li>
                </ul> 
                
            </div>
            <div class="col">
              <div class="mid-head col-12 italic">                    
                  We are Stark Digital Media Services Pvt. Ltd a leading WEB Services Company providing end to end design and developmentservices to its clients across the globe
              </div>
             </div>
            <div class="col cours-she">
                 <div class="col-12 border-bottom">
                    <div class="col-4">
                    <img src="<%= @course.pic%>" width="100%">                      
                    </div>
                    <div class="col-8">    
                              <h2>Course Name: <%= @course.title%></h2> 
                              <p>Description: <%= @course.description%></p>
                              <p>Duration: <%= @course.duration%></p>
                              <p>Fees: <%= @course.fees%></p>  

                       <button type="submit" class="btn-normal course-shed-btn">Schedule of Cources</button>                 
   						      </div>
                </div>    
            </div>
            <div class="col">
              <div class="col-12 mid-head">
                You can also check Cources
              </div>
              <div class="col-12">

                  <% @courses.each do |c| %>
                              <div class="col-4">
                                <div class="course-img">
                                	<%= image_tag c.pic.url(:medium) %>
                                    <span class="caption"><p value="<%= c.title %>"></span>
                                      <li style="float: left;"><%= c.title %> </li>                            
                                <%= link_to 'Read More', {:action => 'course_detail', :title => c.title }, :class => 'read-btn' %>
                              </div>                          
                            </div>
                  <% end %>

              </div>
            </div>             
            </section>                       
            <footer>
                     <p>Copyright 2014 All Rights Reserved by <a href="/home">iSygnet</a><p>
            </footer><!-- footer end -->    
</div><!-- wrapper end -->   
